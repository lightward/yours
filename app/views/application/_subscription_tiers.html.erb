  <% end %>

  <%= form_with url: subscription_path, method: :post, data: { turbo: false } do |f| %>
    <%= f.hidden_field :tier, value: "tier_100" %>
    <%= f.submit "$100/month", name: nil %>
  <% end %>

  <%= form_with url: subscription_path, method: :post, data: { turbo: false } do |f| %>
